{
    "name": "StaticReview/precommit",
    "description": "Pre-Commit tools for git",
    "license": "MIT",
    "require": {
        "symfony/console": "~3.0",
        "symfony/yaml": "~3.0",
        "symfony/process": "~3.0",
        "herrera-io/phar-update": "~1.0",
        "league/climate": "3.2",
        "symfony/filesystem": "~3.0",
        "symfony/finder": "~3.0"
    },
    "require-dev": {
        "mockery/mockery": "^0.9",
        "phpunit/phpunit": "^4.0",
        "sensiolabs/security-checker": "^3.0",
        "squizlabs/php_codesniffer": "^2.0"
    },
    "autoload": {
       "psr-4": {
          "StaticReview\\": "src/"
       }
    },
    "autoload-dev": {
      "psr-4": {
        "StaticReview\\Test\\Unit\\": "tests/unit/",
        "StaticReview\\Test\\Functional\\": "tests/functional/"
      }
    }
}
